@model TextField
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<!--Все используемые ниже свойства определены в классе EntityBase и его наследниках-->
<div class="AdminMenu">
    <h2>Редактировать запись</h2>
    <div>
        <form asp-area="Admin" asp-controller="Home" asp-action="EditBanner" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="CodeWord" />
            @*<input type="hidden" asp-for="TitleImages" />*@

            <div asp-validation-summary="All"></div>
            @*<div class="div-box">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>*@
            <div class="div-box">
                <label asp-for="Subtitle">Подзаголовок</label>
                <input asp-for="Subtitle" />
                <span asp-validation-for="Subtitle"></span>
            </div>
            <div class="div-box">
                <label for="BannerBackground">Задний фон баннера</label>
                <input type="file" name="BannerBackground" id="BannerBackground" />
            </div>
            <div>
                <img class="img-block" src="~/images/@Model.TitleImages.FirstOrDefault(x => x.CodeWord == "BannerBackground").TitleImagePath" />
            </div><br />
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>




