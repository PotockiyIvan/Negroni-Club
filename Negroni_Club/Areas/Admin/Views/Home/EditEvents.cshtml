@model TextField
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<div class="AdminMenu">
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="Home" asp-action="EditEvents" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="CodeWord" />

            
            <div class="div-box">
                <label for="BigTitleImage">Большая титульная картинка</label>
                <input type="file" name="BigTitleImage" id="BigTitleImage" />
            </div>
            @*<div>
                <img class="img-block" src="~/images/@Model.TitleImages.FirstOrDefault(x => x.CodeWord == "EventsBigTitleImage").TitleImagePath" />
            </div>*@
            <div class="div-box">
                <label for="SmallTitleImage">Маленькая титульная картинка</label>
                <input type="file" name="SmallTitleImage" id="SmallTitleImage" />
            </div>
            @*<div>
                <img class="img-block" src="~/images/@Model.TitleImages.FirstOrDefault(x => x.CodeWord == "EventsSmallTitleImage").TitleImagePath" />
            </div>*@<br />
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>
