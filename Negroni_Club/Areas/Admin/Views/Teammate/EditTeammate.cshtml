@model Teammate
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}
@*Подключаем текстовый редактор ckeditor*@
<script src="~/js/ckeditor/ckeditor.js"></script>
@*<link href="~/css/AdminStyle.css" rel="stylesheet" />*@

<div class="AdminMenu">
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="Teammate" asp-action="EditTeammate" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="TitleImagePath" />

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="div-box">
                <label asp-for="Subtitle"></label>
                <input asp-for="Subtitle" />
                <span asp-validation-for="Subtitle"></span>
            </div>
            <div class="div-box">
                <label asp-for="TitleImagePath"></label>
                <input type="file" name="titleImageFile" id="titleImageFile" />
                <div>
                    <img class="img-block" src="~/images/@Model.TitleImagePath" />
                </div>
            </div>
            <div class="div-box">
                <label asp-for="VKLink"></label>
                <input asp-for="VKLink" />
                <span asp-validation-for="VKLink"></span>
            </div>
            <div class="div-box">
                <label asp-for="InstagramLink"></label>
                <input asp-for="InstagramLink" />
                <span asp-validation-for="InstagramLink"></span>
            </div>
            <div class="div-box">
                <label asp-for="FacebookLink"></label>
                <input asp-for="FacebookLink" />
                <span asp-validation-for="FacebookLink"></span>
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>



<script>
    window.onload = function() {
        var newCKEdit = CKEDITOR.replace('@Html.IdFor(x=>x.Text)');
        newCKEdit.updateElement();
    }
</script>
