@model DishesСategory

@{
    string strTitle = "Список Блюд";
    ViewBag.Title = strTitle;
}

<div id="banner" class="banner full-screen-mode parallax">
    <div class="container pr">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="banner-static">
                <div class="banner-text">
                    <div class="banner-cell">
                        <div class="container-lg">
                            <h1>@strTitle</h1>
                            <div class="table-wrapper2">
                                <div class="table-title2">
                                    <div class="row">
                                        <div class="col-sm-8"><h2>Редактировать Блюда</h2></div>
                                        <div class="col-sm-4">
                                            <form asp-area="Admin" asp-controller="Dishes" asp-action="EditDish" asp-route-id="@Model.Id" method="get">
                                                <button id="EditDishBtn" type="submit" class="btn btn-info add-new"><i class="fa fa-plus"></i> Добавить блюдо</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <table class="table2 table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Блюдо</th>
                                            <th>Редактировать</th>
                                            <th>Удалить</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Dishes != null)
                                        {
                                            foreach (Dish entity in Model.Dishes)
                                            {
                                                <tr>
                                                    <td>@entity.Title</td>
                                                    <td>
                                                        <a asp-area="Admin" asp-controller="Dishes" asp-action="EditDish" asp-route-id="@entity.Id" method="post" class="edit" title="Edit" data-toggle="tooltip">
                                                            <i class="material-icons">&#xE254;</i>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <form asp-area="Admin" asp-controller="Dishes" asp-action="Delete" id="form-@entity.Id" method="post">
                                                            <input type="hidden" name="id" value="@entity.Id">
                                                            <a class="delete" title="Delete" data-toggle="tooltip" href="#" onclick="document.getElementById('form-@entity.Id').submit();">
                                                                <i class="material-icons">&#xE872;</i>
                                                            </a>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- end banner-cell -->
                </div>
                <!-- end banner-text -->
            </div>
            <!-- end banner-static -->
        </div>
        <!-- end col -->
    </div>
    <!-- end container -->
</div>
<!-- end banner -->
