@model DishesСategory
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<div class="AdminMenu">
    <h2>@strTitle</h2>
    <div>
        <form asp-area="Admin" asp-controller="Dishes" asp-action="EditDishCategory" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="TitleIconPath" />
            <input type="hidden" asp-for="IndexNumber" />
            <input type="hidden" asp-for="Dishes" />

            <div asp-validation-summary="All"></div>
            <div class="div-box">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="div-box">
                <a asp-area="Admin" asp-controller="Dishes" asp-action="SelectCategoryIcon" asp-route-id="@Model.Id" method="post">Выбрать иконку</a>
            </div>
            <input type="submit" value="Сохранить" />
        </form>
    </div>
</div>
