@model IQueryable<DishesСategory>

@{
    string strTitle = "Список Категорий";
    ViewBag.Title = strTitle;
    DataManager dataManager = ViewBag.DataManager;
}

<div id="banner" class="banner full-screen-mode parallax">
    <div class="container pr">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="banner-static">
                <div class="banner-text">

                    <div class="banner-cell">

                        <h1>@strTitle</h1>
                        <div>
                            <h3>Наши категории блюд</h3>
                            <div class="div-box">
                                <a asp-area="Admin" asp-controller="Dishes" asp-action="EditDishCategory" asp-route-id="">Добавить категорию</a>
                            </div>
                            @if (Model.Any())
                            {
                                var categories = dataManager.DishesCategories.GetDishesCategories().OrderBy(x => x.IndexNumber);
                                <div>
                                    
                                    @foreach (DishesСategory entity in categories)
                                    {
                                    <div>
                                        <a asp-area="Admin" asp-controller="Dishes" asp-action="EditDishCategory" asp-route-id="@entity.Id" method="post">редактировать</a>
                                        |
                                        <form style="display: inline-block;" id="@entity.Id" asp-area="Admin" asp-controller="Dishes" asp-action="Up" method="post">
                                            <input type="hidden" name="id" value="@entity.Id">
                                            <input type="submit" value="Поднять" />
                                        </form>
                                        |
                                        <form style="display: inline-block;" id="form-@entity.Id" asp-area="Admin" asp-controller="Dishes" asp-action="Down" method="post">
                                            <input type="hidden" name="id" value="@entity.Id">
                                            <input type="submit" value="Опустить" />
                                        </form>
                                        |
                                        <form style="display: inline-block;" id="form-@entity.Id" asp-area="Admin" asp-controller="Dishes" asp-action="DeleteDishCategory" method="post">
                                            <input type="hidden" name="id" value="@entity.Id">
                                            <input type="submit" value="Удалить" />
                                        </form>
                                        |
                                        <a asp-area="" asp-controller="Services" asp-action="Index" asp-route-id="@entity.Id">
                                            @($"{entity.Title}")
                                        </a>
                                    </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                    <!-- end banner-cell -->
                </div>
                <!-- end banner-text -->
            </div>
            <!-- end banner-static -->
        </div>
        <!-- end col -->
    </div>
    <!-- end container -->
</div>
<!-- end banner -->