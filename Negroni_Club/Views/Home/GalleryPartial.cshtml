@model IQueryable<GalleryAlbum>

@{
    DataManager dataManager = ViewBag.DataManager;
}


<div id="gallery" class="gallery-main pad-top-100 pad-bottom-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="wow fadeIn" data-wow-duration="1s" data-wow-delay="0.1s">
                    <h2 class="block-title text-center">
                        Наша Галерея
                    </h2><br />
                    @*<p class="title-caption text-center">There are many variations of passages of Lorem Ipsum available </p>*@
                </div>
            </div>
        </div>
        <div class="grid-portfolio my-custom-scrollbar" id="portfolio">
            <div class="row" id="blink5">
                @foreach (GalleryAlbum album in Model)
                {
                    string titleImagePath = dataManager.GalleryAlbums.GetRandomPhoto(album.Id).AlbumPhotoPath;

                    <div class="col-md-4 col-sm-6">
                        <div class="portfolio-item">
                            <div class="thumb">
                                <a asp-area="" asp-controller="Home" asp-action="AlbumPhotoList" asp-route-id="@album.Id">
                                    <div class="hover-effect">
                                        <div class="hover-content">
                                            <p>@album.Title @album.EventDate.ToShortDateString()</p>
                                        </div>
                                    </div>
                                </a>
                                <div class="gallery-image">
                                    <img src="~/images/gallery/album from @album.EventDate.ToShortDateString()/@titleImagePath?width=1920&height=1280">
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
